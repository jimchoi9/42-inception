[mysqld]
user = root # mariadb 서버가 실행될 때 사용할 사용자 계정
port = 3306 # mariadb 서버가 수신 대기할 포트
datadir = /var/lib/mysql  # 데이터베이스 파일이 저장될 디렉토리 지정
socket = /run/mysqld/mysqld.sock  # 클라이언트와 서버 간 통신을 위한 소켓 파일의 경로
skip-networking = false   # 네트워킹 기능 활성화 (원격 클라이언트의 서버 접속 허용)
bind-address = 0.0.0.0   # mariadb 서버가 모든 ip 주소에서의 연결을 수신하도록 설정